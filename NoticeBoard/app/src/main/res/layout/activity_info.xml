<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/toolbar_frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:id="@+id/toolbar_info"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/info_title"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Notice Board"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info_description"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="This is a notice board app for F.E. Department, Pimpri Chinchwad College of Engineering"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/info_dev"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Developers"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info_dev1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Suyash Sonawane, F.E. Comp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/info_dev2"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Tejas Morkar, F.E. Comp"
            android:textSize="17sp" />

    </LinearLayout>

</ScrollView>
